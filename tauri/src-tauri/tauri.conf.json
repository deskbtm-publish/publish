{
  "$schema": "../../node_modules/@tauri-apps/cli/schema.json",
  "productName": "publish",
  "version": "0.0.1",
  "identifier": "com.deskbtm.publish",
  "build": {
    "frontendDist": "../../packages/desktop/dist",
    "devUrl": "https://localhost:3000",
    "beforeDevCommand": "yarn _web:desktop",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "withGlobalTauri": false,
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "decorations": false,
        "title": "publish",
        "label": "main",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "fileDropEnabled": false,
        "center": true,
        "additionalBrowserArgs": "--disable-web-security"
      }
    ],
    "security": {}
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "",
    "longDescription": "",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "languages": [
          "en-US",
          "zh-CN"
        ]
      }
    }
  }
}