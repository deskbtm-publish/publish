    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "./dist"
  ],
  "devDependencies": {
    "typescript": "5.7.2",
    "vite": "6.0.7"
  },
  "dependencies": {
    "@publish-kit/sdk": "workspace:^"
  }
}
