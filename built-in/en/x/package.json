{
  "name": "@publish-addon/x",
  "version": "0.0.1-alpha.1",
  "description": "Publish x(twitter) addon",
  "author": "Han <han@deskbtm.com>",
  "main": "",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch --mode development",
    "prepack": "npm run build",
